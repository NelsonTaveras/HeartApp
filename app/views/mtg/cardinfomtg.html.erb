<div class="mtg_header">
  <div class="col-xs-2 logo"><%= link_to 'MTGApp', searchmtg_path, style: 'color:#FFFFFF;' %><br />
  <h4><i>Smooth like magic.</i></h4>
  </div>
</div>
<br>

<% flash.each do |name, message| %>
  <div class="<%= flash_class(name) %>">
    <%= message %>
  </div>
<% end %>

<div class="container" >
<center><%= image_tag "http://api.mtgdb.info/content/card_images/"+ @card.id.to_s + ".jpeg" %></center>
</div>

<table class="table table-striped table-bordered table-hover" >

  <thead>
    <tr>
      <th>Property </th>
      <th style="width: 50%;">Value </th>
    </tr>
  </thead>

  <tbody>
    
      <tr>
        <td>Name</td>
        <td><%= @card.name %></td>
      </tr>

      <tr>
        <td>R</td>
        <td><%= @manas['R'] %> <%= image_tag "Red_Mana.png" %> </td>
      </tr>

      <tr>
        <td>U</td>
        <td><%= @manas['U'] %> <%= image_tag "Blue_Mana.png" %></td>
      </tr>

      <tr>
        <td>G</td>
        <td><%= @manas['G'] %> <%= image_tag "Green_Mana.png" %></td>
      </tr>

      <tr>
        <td>B</td>
        <td><%= @manas['B'] %> <%= image_tag "Black_Mana.png" %></td>
      </tr>

      <tr>
        <td>W</td>
        <td><%= @manas['W'] %> <%= image_tag "White_Mana.png" %></td>
      </tr>

      <tr>
        <td>Extra</td>
        <td><%= @manas['E'] %></td>
      </tr>

      <tr>
        <td>Description</td>
        <td><%= @card.description %></td>
      </tr>
    
  </tbody>
</table>

<div class="btn-group">
    <%= link_to 'Back', :back , {:class => "btn btn-primary"} %>  
</div>

<br><br>