<div class="hs_header">
  <div class="col-xs-2 logo"><%= link_to 'HeartApp', searchhs_path, style: 'color:#FFFFFF;' %><br />
  <h4><i>Filter, Search, Results.</i></h4>
  </div>
</div>
<br>
<% flash.each do |name, message| %>
  <div class="<%= flash_class(name) %>">
    <%= message %>
  </div>
<% end %>

<div class="container" >
<center><%= image_tag "cards/"+@card.image_url %></center>
</div>


<table class="table table-striped table-bordered table-hover" >

  <thead>
    <tr>
      <th>Property </th>
      <th style="width: 50%;">Value </th>
    </tr>
  </thead>

  <tbody>
    
      <tr>
        <td>Set</td>
        <td><%= @card.set %></td>
      </tr>

      <tr>
        <td>Description</td>
        <td><%= @card.description %></td>
      </tr>

      <tr>
        <td>Health</td>
        <td><strong><%= @card.health %><%= image_tag "HealthCrystalIcon.png",size: "20x20"%><strong></td>
      </tr>

      <tr>
        <td>Attack</td>
        <td><strong><%= @card.attack %><%= image_tag "AttackCrystalIcon.png",size: "20x20"%><strong></td>
      </tr>

      <tr>
        <td>Quality</td>
        <td><%= @card.quality %></td>
      </tr>

      <tr>
        <td>Type</td>
        <td><%= @card.type %></td>
      </tr>

      <tr>
        <td>Class</td>
        <td><%= @card.class %></td>
      </tr>

    
  </tbody>
</table>

<div class="btn-group">
    <%= link_to 'Back', :back , {:class => "btn btn-primary"} %>  
</div>

<br><br>