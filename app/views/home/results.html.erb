<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name </th>
      <th>Set </th>
      <th>Cost </th>
      <th>Description </th>
      <th>Health </th>
      <th>Attack </th>

    </tr>
  </thead>

  <tbody>
    <% for card in @filtered2 do %>
      <tr>
        <td><%= link_to card.name,cardinfo_path(card.id_api,:cost => params[:cost])%>&nbsp</td>
        <td><%= card.set %>&nbsp</td>
        <td><%= card.cost %><%= image_tag "ManaCrystalIcon.png",size: "20x20"%></td>
        <td><%= card.description %></td>
        <td><strong><%= card.health %><%= image_tag "HealthCrystalIcon.png",size: "20x20"%><strong></td>
        <td><strong><%= card.attack %><%= image_tag "AttackCrystalIcon.png",size: "20x20"%><strong></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= will_paginate @filtered2 %>
<br>

<div class="btn-group">
  <a  href = "/search" class="btn btn-primary " > Back to Search </a>  
</div>
<br><br>

