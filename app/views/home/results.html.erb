<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name </th>
      <th>Set </th>
      <th>Cost </th>
      <th>Description </th>
      <th>Health </th>
      <th>Attack </th>

    </tr>
  </thead>

  <tbody>
    <% for card in @filtered2 do %>
      <tr>
        <td><%= link_to card.name,search_path %>&nbsp</td>
        <td><%= card.set %>&nbsp</td>
        <td><%= card.cost %><%= image_tag "http://img1.wikia.nocookie.net/__cb20130421182850/hearthstone/images/f/f7/ManaCrystalIcon.png",size: "20x20"%></td>
        <td><%= card.description %></td>
        <td><strong><%= card.health %><%= image_tag "http://img4.wikia.nocookie.net/__cb20130602005139/hearthstone/images/0/03/Health_value_back.png",size: "20x20"%><strong></td>
        <td><strong><%= card.attack %><%= image_tag "http://img3.wikia.nocookie.net/__cb20131117100119/hearthstone/ru/images/8/82/Attack_value_back.png",size: "20x20"%><strong></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= will_paginate @filtered2 %>
<br>

<div class="btn-group">
  <a  href = "/search" class="btn btn-primary " > Back to Search </a>  
</div>
<br><br>

